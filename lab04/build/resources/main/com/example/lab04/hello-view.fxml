<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>



<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.DatePicker?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lab04.HelloController" vgap="10" hgap="10">

    <Label fx:id="usernameText" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Username"/>

    <Label fx:id="passwordLabel" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Password" />

    <Label fx:id="fullNameLabel" text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Full Name" />

    <Label fx:id="emailLabel" text="E-Mail:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="E-Mail" />

    <Label fx:id="phoneLabel" text="Phone #:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="Phone #" />

    <Label fx:id="birthLabel" text="Date of Birth" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" promptText="Date of Birth" />

    <Button fx:id="registerButton" text="Register" onAction="#handleRegister" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label fx:id="displayText" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

</GridPane>